---
/**
 * @fileoverview Testimonials showcase grid (carousel-ready).
 */
import TestimonialCard from '@/components/molecules/TestimonialCard.astro';

interface Testimonial {
  quote: string;
  clientName: string;
  clientRole: string;
  company: string;
}

interface Props {
  heading?: string;
  testimonials: Testimonial[];
}

const { testimonials, heading = 'What our partners say' } = Astro.props;
const shouldRender = testimonials.length > 0;
---
{shouldRender && (
  <section class="c-testimonials section">
  <div class="container">
    <div class="c-testimonials__header">
      <h2>{heading}</h2>
    </div>
    <div class="c-testimonials__grid">
      {testimonials.map((testimonial) => (
        <TestimonialCard
          quote={testimonial.quote}
          clientName={testimonial.clientName}
          clientRole={testimonial.clientRole}
          company={testimonial.company}
        />
      ))}
    </div>
  </div>
</section>
)}

<style>
  .c-testimonials__grid {
    margin-top: var(--space-8);
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 960px) {
    .c-testimonials__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  .c-testimonials__header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
  }
</style>
