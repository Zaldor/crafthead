---
/**
 * @fileoverview Clients showcase organism.
 */
import ClientLogoRow from '@/components/molecules/ClientLogoRow.astro';

interface ClientItem {
  name: string;
  logo: string;
  logoAlt: string;
  website?: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  clients: ClientItem[];
}

const { heading = 'Trusted by leaders across industries', subheading, clients } = Astro.props;
const hasClients = clients.length > 0;
---
{hasClients && (
  <section class="c-clients section section--tight">
  <div class="container">
    <div class="c-clients__copy">
      <h2>{heading}</h2>
      {subheading && <p>{subheading}</p>}
    </div>
    <ClientLogoRow items={clients} />
  </div>
</section>
)}

<style>
  .c-clients__copy {
    display: grid;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .c-clients__copy h2 {
    font-size: clamp(1.75rem, 4vw, 2.75rem);
  }
</style>
