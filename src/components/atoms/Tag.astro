---
/**
 * @fileoverview Tag / pill atom for categories and services.
 */
interface Props {
  tone?: 'default' | 'accent' | 'muted';
}

const { tone = 'default' } = Astro.props;
---
<span class={`c-tag c-tag--${tone}`}>
  <slot />
</span>

<style>
  .c-tag {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-pill);
    font-size: var(--font-size-sm);
    letter-spacing: 0.02em;
  }

  .c-tag--default {
    background: color-mix(in srgb, var(--color-bg-subtle) 60%, transparent);
    color: var(--color-text-secondary);
  }

  .c-tag--accent {
    background: var(--color-accent);
    color: var(--color-text-inverse);
  }

  .c-tag--muted {
    background: color-mix(in srgb, var(--color-border-subtle) 40%, transparent);
    color: var(--color-text-muted);
  }
</style>
