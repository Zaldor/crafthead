---
/**
 * @fileoverview Service card molecule describing an offering.
 */
import TextLink from '@/components/atoms/TextLink.astro';

interface Props {
  title: string;
  description: string;
  href?: string;
}

const { title, description, href } = Astro.props;
---
<div class="c-service-card">
  <h3>{title}</h3>
  <p>{description}</p>
  {href && <TextLink href={href}>Explore this service</TextLink>}
</div>

<style>
  .c-service-card {
    display: grid;
    gap: var(--space-4);
    padding: var(--space-6);
    border-radius: var(--card-radius);
    background: color-mix(in srgb, var(--color-bg-subtle) 65%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-border-subtle) 60%, transparent);
    min-height: 100%;
  }

  .c-service-card h3 {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    color: var(--color-text-primary);
  }

  .c-service-card p {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
  }
</style>
