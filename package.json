{
  "name": "crafthead-studio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "clean:astro": "node --input-type=module -e \"import fs from 'node:fs'; fs.rmSync('.astro',{recursive:true,force:true}); fs.rmSync('node_modules/.astro',{recursive:true,force:true});\"",
    "dev:clean": "npm run clean:astro && astro dev",
    "dev:verbose": "astro dev --verbose",
    "start": "astro dev",
    "build": "astro build",
    "postbuild": "node ./scripts/generate-pages-worker.mjs",
    "preview": "astro preview",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/tailwind": "^6.0.2",
    "astro": "^5.17.1",
    "class-variance-authority": "^0.7.1",
    "lucide-static": "^0.563.0",
    "resend": "^6.9.1",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "lightningcss": "^1.31.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
